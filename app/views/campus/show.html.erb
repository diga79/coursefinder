<h1><%= @campu.name %></h1>

<p><b>Institution:</b> <%= @campu.institution.name %></p>
<p><b>Address:</b> <%= @campu.address %></p>
<p><b>City:</b> <%= @campu.city.name %></p>
<p><b>State:</b> <%= @campu.state %></p>
<p><b>Country:</b> <%= @campu.country_id %></p>
<p><b>Phone:</b> <%= @campu.phone %></p>

<p><%= link_to "Edit Campus", edit_campu_path(@campu) %> | <%= link_to "Delete", campu_path(@campu), method: :delete, data: { confirm: 'Are you sure?' } %></p>

<% content_for :aside do %>
	<%= render partial: "sidebar"  %>
<% end %>
